{
    "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "files": {
        "ignore": [
            "node_modules/**",
            "dist/**",
            "src/templates/**"
        ]
    },
    "formatter": {
        "enabled": true,
        "lineWidth": 120
    },
    "javascript": {
        "formatter": {
            "enabled": true,
            "semicolons": "always",
            "quoteStyle": "single",
            "quoteProperties": "asNeeded"
        }
    }
}